#include <iostream>
#include <string>
using namespace std;

class Roommate {
private:
    string name;
    int age;
    string personality;
    string hobby;

public:
    // Constructor
    Roommate(string n, int a, string p, string h) {
        name = n;
        age = a;
        personality = p;
        hobby = h;
    }

    // Method to display details
    void displayInfo() {
        cout << "Roommate Details:" << endl;
        cout << "Name: " << name << endl;
        cout << "Age: " << age << endl;
        cout << "Personality: " << personality << endl;
        cout << "Hobby: " << hobby << endl;
    }
};

int main() {
    Roommate r("Brian", 20, "Calm and organized", "Watching football");
    r.displayInfo();
    return 0;
}
