class Roommate:
    def __init__(self, name: str, age: int, personality: str, hobby: str):
        if not name:
            raise ValueError("name must not be empty")
        if not isinstance(age, int) or age < 0:
            raise ValueError("age must be a non-negative integer")
        self.name = name
        self.age = age
        self.personality = personality
        self.hobby = hobby

    def display_info(self) -> None:
        print("Roommate Details:")
        print(f"Name: {self.name}")
        print(f"Age: {self.age}")
        print(f"Personality: {self.personality}")
        print(f"Hobby: {self.hobby}")

    def to_dict(self) -> dict:
        return {
            "name": self.name,
            "age": self.age,
            "personality": self.personality,
            "hobby": self.hobby,
        }

    def __str__(self) -> str:
        return f"{self.name} ({self.age}) â€” {self.personality}; likes {self.hobby}"


if __name__ == "__main__":
    r = Roommate("Brian", 20, "Calm and organized", "Watching football")
    r.display_info()
    print()
    print("String form:", str(r))
    print("Dict form:", r.to_dict())
